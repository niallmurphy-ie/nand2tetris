/**
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    // Put your code here:
        // sel == 0 && A == 1
        Nand(a=sel, b=sel, out=nandSel);
        Nand(a=a, b=a, out=nandA);
        Not(in=nandA, out=notNandA);
        And(a=nandSel, b=notNandA, out=outZero);
        // sel == 1 && B == 1
        Not(in=nandSel, out=notNandSel);
        Nand(a=b, b=b, out=nandB);
        Not(in=nandB, out=notNandB);
        And(a=notNandSel, b=notNandB, out=outOne);
        Or(a=outZero, b=outOne, out=out);
}