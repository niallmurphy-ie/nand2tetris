/**
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    // Put your code here:
        // sel == 0 && A == 1
        And(a=b, b=sel, out=aAndSel);
        Not(in=sel, out=notSel);
        And(a=notSel, b=a, out=bAndNotSel);
        Or(a=aAndSel, b=bAndNotSel, out=out);
}